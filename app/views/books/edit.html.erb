	<div class="row">
		<div class="col-xs-12">
			<h1>Editing Book</h1>
			<% if @book.errors.any? %>
				<div class="error_explanatation">
					<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3><br>

					<ul>
					<% @book.errors.full_messages.each do |msg| %>
						<li class="error_messages"><%= msg %></li>
					<% end %>
					</ul>
				</div>
			<% end %>
			<%= form_for(@book) do |f| %>
		   <div class="field row">
			<p>Title</p>
			<%= f.text_field :title, class: "col-xs-12" %>
		   </div>
		   <div class="field row">
			<p>Opinipn</p>
			<%= f.text_area :body, class: "col-xs-12" %>
		   </div>
			<div class="field row">
			<br><%= f.submit "Update Book", class: "btn btn-primary col-xs-12"%></br>
		    </div>
		<% end %> 
		<%= link_to "Show", @book, class: "book_#{@book.id}" %>
		   |
		<%= link_to "Back", books_path, class: "back" %>
		</div>
	</div>